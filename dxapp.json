{
  "name": "expected_depth_v1.0.0",
  "title": "expected_depth_v1.0.0",
  "summary": "Calculates the expected depth per gene for a whole run.",
  "tags":["Coverage"],
  "dxapi": "1.0.0",
  "properties": {
    "githubRelease":"v1.0.0"
  },
  "inputSpec": [
    {
      "name": "flagstat",
      "label": "flagstat_files",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.flagstat"
      ],
      "help": ""
    },
    {
      "name": "coverage",
      "label": "coverage files",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.gz"
      ],
      "help": ""
    },
    {
      "name": "coverage_index",
      "label": "coverage tbi files",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.tbi"
      ],
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "outfile",
      "label": "outfile",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "outfile_index",
      "label": "tbi_index",
      "class": "file",
      "patterns": [
        "*.tbi"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 1
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/dnanexus_expected_depth.sh"
  },
  "access": {
    "project": "CONTRIBUTE",
    "allProjects": "VIEW",
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:eu-central-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x2"
        }
      }
    }
  }
}
